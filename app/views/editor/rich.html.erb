      <div class="ple-module-guide col-md-3">
        <h2>3</h2>
      </div>

      <div class="ple-module-content col-md-9">
          <button id="location_button" class="btn btn-lg btn-default"><i class="fa fa-map-marker" aria-hidden="true"></i> Add Location</button>
