              <div class="col-md-6"> 
                <div id="map" class="leaflet-map" style="width: 100% ; height: 300px;"></div>
                </div>
                <div class="col-md-6">
                  <h4><b>By place name :</b></h4>
                    <p>
                      <input id="placenameInput" type="text" class="form-control" />
                    </p>
