<%= stylesheet_link_tag "application", :media => "all" %>
<link href="/lib/font-awesome/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />

<style>
  body {
    padding-top: 0;
  }
  #notes {
    padding: 0;
  }
</style>

<% if @notes.nil? || @notes.length == 0 %>

  <p><%= raw t('tag.show.no_results_found', :tag => params[:id]) %>:</p>

  <%= render template: "search/new" %>

<% else %>

  <% @compact = true %>
  <% @widget = true %>
  <%= render :partial => "notes/notes" %>

<% end %>
