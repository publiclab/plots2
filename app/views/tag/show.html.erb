<script src="/assets/wikis.js" type="text/javascript"></script>

<div class="col-lg-12">
  <div class="container">
  <%= render partial: 'tag/show/header' %>
    <div class= "tag_card">
      <div class="row">
        <div class="col-md-10">
          <h1 style="text-align:left;"><b><%= @title %></b></h1>
        </div>
        <div class="col-md-2">
          <%= render :partial => "tag/show/user_controls" %>
        </div>
      </div>
      <% if @wiki %>
        <p class = "wiki-sub"><%= @wiki.latest.body %></p>
      <% else %>
        <p class = "wiki-sub">This topic has no wiki</p>
      <% end %>
      <div class = "tag-buttons">
        <% if @related_tags %>
          <a><%= render partial: 'tag/subscribe_button', locals: {tags: @related_tags } %></a>
        <% end %>
        <% if @wiki %>
          <a><%= link_to("Learn more &raquo;".html_safe, "/wiki/#{params[:id]}", :class=> "btn btn-outline-secondary btn-sm sub")%></a>
        <% else %>
          <a class="btn btn-outline-secondary btn-sm sub" href="/wiki/new?title=<%= params[:id] %>">Add a wiki page <span class="fa fa-plus"></span></a>
        <% end %>
      </div>
  </div>
</div>
  <div class="box">

    <%= render partial: 'tag/show/contributors' %>

    <% unless @tags.try(:first).try(:parent).nil? %>
      <small>Alias of: <%= @tags.first.parent %></small>
    <% end %>

    <%= render :partial => "notes/format_toggle" if @node_type == "note" %>

    <% if logged_in_as(['admin']) %>
      <hr />
      <p><a class="btn btn-outline-secondary btn-lg" onClick="$('#add_parent').toggle();">Add tag parent</a> (admin only)</p>
      <div id="add_parent" style="display:none;">
        <p><b>Tag parenting</b></p>
        <div class="card bg-light">
          <div class="card-body">
            <form class="form" action="/tag/parent" method="get">
              <input type="text" placeholder="parent" name="parent" />
              <input type="hidden" placeholder="parent" name="name" value="<%= @tags&.first&.name %>" />
              <input class="btn btn-outline-secondary btn-lg" type="submit" value="Submit" />
            </form>
          </div>
        </div>
      </div>
    <% end %>

    <%= render partial: "tag/show/questions" %>
    <%= render partial: "tag/show/related_tags" %>
    <%= render partial: 'tag/show/nav_tabs' %>

    <p style="padding-top:8px;">
    <a class="btn btn-sm btn-outline-secondary" href="?order=views"><i class="fa fa-eye"></i> by views</a>
    <a class="btn btn-sm btn-outline-secondary" href="?order=likes"><i class="fa fa-star"></i> by likes</a>
    </p><br />

    <%= render partial: 'tag/show/tab_content' %>
  <div>
    <script type="text/javascript">
      $('#questions .btn-group .btn').click(function(){
        $(this).addClass('active').siblings().removeClass('active');
      });
    </script>
  </div>
</div>

<%= stylesheet_link_tag "dashboard" %>

<style>
 .box {
   padding: 2%;
   margin: 2%;
 }

 .tag_card{
    width : 25em;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 20px;
    /* padding-left: 20px; */
    position: absolute;
    top: 22%;
    left: 5%;
    background-color: white;
  }

  @media screen and (max-width: 480px) {
  .tag_card {
    width : 24em;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 20px;
    position: absolute;
    top:100%;
    }

    .box{
      padding: 2%;
      margin: 2%;
      margin-top: 120%;
    }

    .col-md-2{
      margin-top: -60px;
    }
  }

  .wiki-sub{
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #666;
    font-size: 13px;
  }

  .tag-buttons{
    padding-top: 30px;
  }

  .sub{
    border-radius: 5px;
    margin-bottom: 12px;
    padding: 5px;
    color:black;
  }

  .container{
    position: relative;
  }

</style>
