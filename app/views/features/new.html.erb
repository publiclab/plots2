<h2>New Feature</h2>

<% url = { controller: "features", action: "create", id: params[:id] } %>

<%= form_for :revision, as: :revision, url: url, html: {class: "form well"} do |f| %>


<% if @revision.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(@revision.errors.count, "error") %></h2>
    <ul>
      <% @revision.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
  <% end %>
<% end %>

