<script src="/assets/notes.js" type="text/javascript"></script>
<%= stylesheet_link_tag "print_new", :media => "print" %>
<div>
  <p class="info-date"><i><b><%= @node.created_at.to_s(:long) %> / <%= raw translation('wiki.show.last_edited', url1: "/profile/" + @node.latest.author.name, author: @node.latest.author.name, time: time_ago_in_words(@node.latest.created_at)) %></b></i></p>
  <h1 id='note-title'><%= @node.title %></h1>
  <p class="info-author"><img class="rounded-circle coauthor-photo" style="width:20px; height:20px; margin-right:8px;" src="<%= @node.user.profile_image %>"/><%= @node.author.name %></p>
  <% if @node.has_power_tag('with') %><% @node.coauthors.each_with_index do |coauthor,i| %>
          <p class="info-author">
          <img class="rounded-circle coauthor-photo" style="width:20px; height:20px; margin-right:8px;" src="<%= coauthor.profile_image %>"/>
            <%= coauthor.username%></p>
          <%= ' ' if i < @node.coauthors.length-1 %><% end %><% end %>
  <% if @node.main_image %>
      <img id="main-image-print" style="max-height:600px;max-width:100%;" src="<%= @node.main_image.path(:large) %>" />
  <% end %>

  <div id=content-window>
  <%= raw auto_link(insert_extras(@node.latest.render_body), :sanitize => false) %>
  </div>

</div><!--/span-->
