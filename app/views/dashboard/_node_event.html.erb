<div class="col-md-6 note-container-event" style="overflow: hidden;">
  <div class="note note-pane note-event<% if node.status == 4 %> moderated<% end %>">

    <div class="header-icon"><i class="fa fa-calendar"></i></div>

    <%= render partial: 'dashboard/node_moderate', locals: { node: node } %>
 
    <% if node.main_image %>
      <a class="img" href="<%= node.path %>"><img src="<%= node.main_image.path(:default) %>" style="width:100%;" /></a>
    <% end %>
 
    <h4><a href="<%= node.path %>"><%= node.title %></a></h4>

    <a class="btn btn-default btn-xs pull-right respond rsvp">RSVP</a>
 
    <p class="meta">Event <%= render partial: "dashboard/node_meta", locals: { node: node } %></p>

  </div>
</div>
