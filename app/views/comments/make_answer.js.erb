$('#answers').append('<%= escape_javascript(render :partial => "questions/answer", :locals => {answer: @answer}) %>')
$('#comment-count')[0].innerHTML = parseInt($('#comment-count')[0].innerHTML)+1
$("#c<%= @comment.id %>")[0].remove()
$('#answer-<%= @answer_id %>-comment-count')[0].innerHTML = parseInt($('#answer-<%= @answer_id %>-comment-count')[0].innerHTML)-1
notyNotification('mint', 3000, 'success', 'topRight', 'Comment promoted to answer successfully!');