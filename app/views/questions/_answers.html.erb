<div class="row">
  <div class="col-xs-12">
    <h3><span id="comment-count"><%= @node.answers.length %></span> Answers</h3>
    <div id="answers">
    <% @node.answers.each do |answer| %>
      <%= render :partial => "questions/answer", :locals => {answer: answer} %>
    <% end %>
    </div>
    <% if current_user %>
      <%= render :partial => "comments/form", :locals => { title: "Post an answer", comment: false, placeholder: "Help users by posting an answer to this question" } %>
    <% else %>
      <p>You must be <a href="/login">logged in</a> to answer.</p>
    <% end %>  
  </div>
</div>