
<%= form_for @image, :html => { :multipart => true, :class => "col-md-6" } do |f| %>

  <h2><%= translation('images.upload_an_image') %></h2>

  <%= render partial: 'layouts/errorMessages', locals: { model: @image } %>

  <p><%= f.file_field :photo %></p>

  <p><%= f.text_field :title, {:placeholder => "Image title", :tabindex => 2} %></p>
  <p><%= f.text_field :notes, {:placeholder => translation('images.short_description')} %></p>
  
  <p><button class="btn-lg btn-primary" type="submit">Upload</button></p>

<% end %>

