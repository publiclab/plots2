
<%= form_for @image, :html => { :multipart => true, :class => "col-md-6" } do |f| %>

  <h2>Upload an image</h2>

  <%= if @image.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@image.errors.count, "error") %></h2>
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
    <% end %>

  <p><%= f.file_field :photo %></p>

  <p><%= f.text_field :title, {:placeholder => "Image title", :tabindex => 2} %></p>
  <p><%= f.text_field :notes, {:placeholder => "a short description"} %></p>

  <p><button class="btn-lg btn-primary" type="submit">Upload</button></p>

<% end %>
