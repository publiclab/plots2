<div class="col-md-3">

<% if @wikis && @wikis.length > 0 %>
  <h3 style="margin-top:0;"><%= t('users.likes.wiki_liked_by') %> <a href="/profile/<%= @user.name %>"><%= @user.name %></a></h3>

  <ul class="nav bullet">
    <% @wikis.each do |wiki| %>
      <% unless (!@node.nil? && wiki.nid == @node.nid) %>
        <li><a href="<%= wiki.path %>"><i class="fa fa-book"></i> <%= wiki.title %></a> <small style="color:#888;">(<%= t('users.likes.updated') %>: <%= distance_of_time_in_words(wiki.updated_at, Time.current, false, :scope => :'datetime.time_ago_in_words') %>)</small></li>
      <% end %>
    <% end %>
    <% if params[:controller] == "search" %>
      <li><a href="/tag/<%= params[:id] %>"><%= t('users.likes.more') %>...</a></li>
    <% end %>
  </ul>
<% end %>

</div>

<div class="col-md-9">
  <h3 style="margin-top:0;"><i class="fa fa-star-o"></i> <%= t('users.likes.liked_by') %> <a href="/profile/<%= @user.name %>"><%= @user.name %></a></h3>

  <hr />

  <%= render :partial => "notes/notes" %>

</div>
