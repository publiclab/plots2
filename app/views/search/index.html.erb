<%= render :partial => "sidebar/related" %>

<div class="col-md-9">

    <h3><%= raw t('search.index.search_results', :query => params[:id]) %> <small>(<a href="/search/advanced/<%= params[:id] %>"><%= t('search.index.advanced_search') %></a>)</small></h3>

  <% if @notes.length == 0 %>

    <p><%= raw t('search.index.no_results', :url1 => "/tag/"+params[:id], :tag => params[:id]) %></p>

    <%= render :partial => "search/search" %>

    <p><%= raw t('search.index.try_advanced_search', :url1 => "/search/advanced/") %></p>
    
  <% else %>
    <% if params[:controller] == 'questions_search' %>
      <%= render :partial => "questions/questions" %>
    <% else %>
      <%= render :partial => "notes/notes" %>
    <% end %>

  <% end %>

  <hr />
  
</div>

<%= stylesheet_link_tag "dashboard" %>
<%= javascript_include_tag "dashboard" %>
<%= javascript_include_tag "questions_search" %>
