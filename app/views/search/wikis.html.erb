 <%= render :partial => "search/nav", :locals => { :section => "search-wikis" } %>

 <div class="container">
   <% if @wikis.present? %>
     <h2> Results for <%= params[:query] %></h2>
     <div class="list-group">
      $(document).on("click", 'ul li', function(){
    $('ul li').removeClass('active');
    $(this).addClass('active');
});
a {
    color:#888;
    text-decoration:none;
}
a:hover {
    text-decoration:underline;
}
a:visited {
    color:#888;
}
.nav {
    padding:10px;
    border:solid 1px #c0c0c0;
    border-radius:5px;
    float:left;
}
.nav li {
    list-style-type:none;
    float:left;
    margin:0 10px;
}
.nav li a {
    text-align:center;
    width:55px;
    float:left;
}
.nav li.active {
    background-color:green;
}
.nav li.active a {
    color:#fff;
    font-weight:bold;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
       <ul class="nav nav-pills">
         <li class="nav-item">
           <a><%= link_to "Most liked", url_for(:order => :likes), :class => "list-group-item list-group-item-action"%><a/>
         </li>
          <li class="nav-item">
            <a><%= link_to "Most viewed", url_for(:order => :views), :class => "list-group-item list-group-item-action"%><a/>
          </li>
          <li class="nav-item">
            <a><%= link_to "Most recent", url_for(:order => :default), :class => "list-group-item list-group-item-action"%><a/>
          </li>
          <li class="nav-item">
            <a><%= link_to "Boolean search", url_for(:order => :natural, :type => :boolean), :class => "list-group-item list-group-item-action"%><a/>
          </li>
          <li class="nav-item">
            <a><%= link_to "Natural search", url_for(:order => :natural, :type => :natural), :class => "list-group-item list-group-item-action"%><a/>
          </li>
       </ul>
     </div>
     <hr>
     <%= render partial: "wiki/wikis", locals: { wiki: @wikis } %>
   <% else %>
     <h4>
       No results found for <%= params[:query] %> :-(
       </br>
       Try searching <a href="/search">for another topic</a> or looking for our items tagged with <a href="/tag/<%= params[:query] %>"><%= params[:query] %></a>
     </h4>
   <% end %>
 </div>

<%= will_paginate @wikis, :renderer => BootstrapPagination::Rails unless @unpaginated %>
