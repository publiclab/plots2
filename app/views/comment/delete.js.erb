$("#answer-<%= @answer_id %>-comment-<%= @comment.id %>-delete-btn").bind('ajax:success', function(e,response){
  $("#answer-<%= @answer_id %>-comment-<%= @comment.id %>").remove()
  $('#answer-<%= @answer_id %>-comment-count')[0].innerHTML = parseInt($('#answer-<%= @answer_id %>-comment-count')[0].innerHTML)-1
})